{
  "name": "node-ts-base",
  "version": "1.3.0",
  "description": "Node.js TypeScript Module - Base",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "test": "jest",
    "build": "node ./node_modules/typescript/bin/tsc"
  },
  "jest": {
    "globals": {
      "tsconfig": "tsconfig.json"
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-base",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  }
}
