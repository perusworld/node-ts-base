{
  "name": "node-ts-base",
  "version": "1.4.0",
  "description": "Node.js TypeScript Module - Base",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "test": "jest",
    "build": "node ./node_modules/typescript/bin/tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "jest": {
    "globals": {
      "tsconfig": "tsconfig.json"
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-base",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
